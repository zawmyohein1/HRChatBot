@model IEnumerable<HRChatBot.Models.Employee>

<h2>Employee List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Join Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmpName</td>
                <td>@emp.Gender</td>
                <td>@emp.Department</td>
                <td>@emp.JoinDate.ToShortDateString()</td>
                <td><a asp-action="Details" asp-route-id="@emp.EmpId">View</a></td>
            </tr>
        }
    </tbody>
</table>
